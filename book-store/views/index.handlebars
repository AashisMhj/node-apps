
<section class="py-2">
    <h1 class="text-center mx-5">Browse and Buy</h1>
    <div class="row gx-5 justify-content-md-center">
        {{#each data}}
        <div class="col col-lg-3 col-sm-6">
            <div class="card shadow p-2 m-2">
                <img class="card-img-top" style="aspect-ratio: 1/1; object-fit: contain; background-color: black;" src="/images/{{this.image}}" alt="{{this.title}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <a href="/book/{{this.id}}">Detail</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div >
</section >